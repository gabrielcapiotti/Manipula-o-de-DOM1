    <button onclick="changeText()">Clique aqui para alterar o texto!</button>
    <p>Aqui vai aparecer alguma coisa...</p>

    <script>
        function changeText() {
            const name = prompt("Digite seu nome");
            const alteracao = document.getElementsByTagName("p")[0]; // Acesso ao primeiro elemento da lista
            alteracao.innerText = `E ai ${name}! Você está deixando seu site dinâmico!`; // Corrigindo a propriedade innerText
        }
    </script>
   
